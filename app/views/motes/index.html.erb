<div class="row">
    <div class="span7 well">
        <h2>Listing Motes</h2>
        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Content</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <% @motes.each do |mote| %>
            <tr>
                <td><%= mote.name %></td>
                <td><%= link_to 'Show', mote %></td>
                <td><%= link_to 'Edit', 'home/setRadio' %></td>
                <td><%= link_to 'Destroy', mote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </table>

        <br />
        <div class="btn-group span2">
            <%= link_to 'New Mote', new_mote_path, :class => "btn btn-large btn-block" %>
            <%= link_to 'back', admin_path, :class => "btn btn-large btn-block" %>
        </div>
    </div>
</div>